{
  "name": "grpc",
  "version": "1.0.0",
  "description": "A simple teste to share to world how we cans use grpc with fastify and typescript",
  "main": "index.js",
  "scripts": {
    "build:proto": "make build-js",
    "migrate": "dotenv -e .env -- pnpm prisma migrate dev",
    "generate": "dotenv -e .env -- pnpm prisma generate",
    "start:dev:grpc": "tsx watch --env-file=.env ./src/infra/server-grpc.ts",
    "start:dev:http": "tsx watch --env-file=.env ./src/infra/server-http.ts | pino-pretty",
    "test:watch": "vitest run --watch",
    "test": "vitest run",
    "lint": "biome check --write",
    "seed": "dotenv -e .env -- prisma db seed"
  },
  "keywords": [
    "grpc",
    "fastify",
    "typescript"
  ],
  "author": "Gustavo Murdiga",
  "license": "ISC",
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@gm-dev/biome": "^1.0.4",
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.16.0",
    "dotenv-cli": "^10.0.0",
    "grpc-tools": "^1.13.1",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "prisma": "^7.3.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "fastify": "^5.5.0",
    "google-protobuf": "^4.0.1",
    "pg": "^8.17.2",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "redis": "^5.8.3",
    "zod": "^4.1.12"
  }
}
